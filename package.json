{
  "name": "matrix-viewer",
  "displayName": "C++ Matrix Viewer",
  "publisher": "citrine",
  "description": "Visualize C++ vectors and arrays as a 2D table",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Debuggers",
    "Visualization"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "matrix-viewer.viewMatrix",
        "title": "View as Matrix (2D Table)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "matrix-viewer.viewMatrix",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ],
      "debug/variables/context": [
        {
          "command": "matrix-viewer.viewMatrix",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/vscode": "^1.70.0",
    "typescript": "^4.7.4"
  }
}