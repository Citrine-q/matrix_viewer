{
  "name": "matrix-viewer",
  "displayName": "Matrix Viewer",
  "description": "Visualize 2D arrays and matrices (C++, Python, Rust, JS, etc.) as a table during debugging.",
  "version": "1.0.0",
  "publisher": "myname", 
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Debuggers",
    "Visualization"
  ],
  "activationEvents": [
    "onDebug"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "matrix-viewer.viewMatrix",
        "title": "View as Matrix (2D Table)"
      }
    ],
    "menus": {
      "debug/variables/context": [
        {
          "command": "matrix-viewer.viewMatrix",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/vscode": "^1.70.0",
    "typescript": "^4.7.4",
    "@vscode/vsce": "^2.15.0"
  }
}